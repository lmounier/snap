<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ai.deepar.example.MainActivity">

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chrono"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/switchCamera"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:visibility="visible"
            tools:text="00:00:00" />

        <ImageButton
            android:id="@+id/galleryButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/nextMask"
            android:layout_alignEnd="@+id/nextMask"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/record_selector" />

        <ImageButton
            android:id="@+id/recordButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_marginStart="28dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/record_selector" />

        <ImageButton
            android:id="@+id/videoButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/linearLayout"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/recordButton"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/record_selector" />

        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/previousMask"
            android:layout_alignStart="@+id/switchCamera"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/record_selector" />


        <ImageButton
            android:id="@+id/switchCamera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/camera_white" />


        <ImageButton
            android:id="@+id/previousMask"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_left" />


        <ImageButton
            android:id="@+id/nextMask"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/masks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:buttonTint="@android:color/white"
                    android:checked="true" />

                <TextView
                    android:id="@+id/textMasks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/masks"
                    android:layout_centerHorizontal="true"
                    android:text="Masks"
                    android:textAlignment="center"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/effects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:buttonTint="@android:color/white"
                    android:checked="false" />

                <TextView
                    android:id="@+id/textEffects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/effects"
                    android:layout_centerHorizontal="true"
                    android:text="Effects"
                    android:textAlignment="center"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:buttonTint="@android:color/white"
                    android:checked="false" />

                <TextView
                    android:id="@+id/textFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filters"
                    android:layout_centerHorizontal="true"
                    android:text="Filters"
                    android:textAlignment="center"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
